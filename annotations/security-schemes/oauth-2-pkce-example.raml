#%RAML 1.0
title: Authorization Test API
version: v1
baseUri: http://api.domain.com/

annotationTypes:
  pkce: !include oauth-2-pkce.raml

securitySchemes:
  oauth2:
    type: OAuth 2.0
    displayName: PKCE OAuth 2
    settings:
      (pkce): true
      accessTokenUri: https://auth.domain.com/authorize
      authorizationUri: https://auth.domain.com/token
      scopes: profile
/pkce:
  get:
    securedBy: oauth2
